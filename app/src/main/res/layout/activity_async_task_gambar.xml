<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="17dp"
    android:paddingTop="17dp"
    android:paddingRight="17dp"
    android:paddingLeft="17dp"
    tools:context="com.example.asus550jx.muhamadabdurrahmanrifai_1202152169_studycase4.AsyncTaskGambar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CARI GAMBAR"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="Masukkan URL Gambar"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#9723a1"
        android:onClick="cari"
        android:text="Klik untuk mencari gambar"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/pict"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
